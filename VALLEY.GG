-- Get gun list from workspace
local function getGunList()
    local guns = {}
    if Workspace:FindFirstChild("GUNS") then
        for _, gunModel in pairs(Workspace.GUNS:GetChildren()) do
            if gunModel:IsA("Model") then
                local price = gunModel:FindFirstChild("Price", true)
                if price then
                    table.insert(guns, gunModel.Name)
                end
            end
        end
    end
    table.sort(guns)
    return guns
end

-- Purchase gun function
local function purchaseGun(gunName)
    if not Workspace:FindFirstChild("GUNS") or not Workspace.GUNS:FindFirstChild(gunName) then
        print("âŒ Gun not found:", gunName)
        return false
    end
    
    local gunModel = Workspace.GUNS[gunName]
    local prompt = gunModel:FindFirstChildWhichIsA("ProximityPrompt", true)
    local price = gunModel:FindFirstChild("Price", true)
    
    if not prompt or not price then
        print("âŒ No prompt or price found")
        return false
    end
    
    -- Check gamepass
    local gamepassId = gunModel:FindFirstChild("GamepassID", true)
    if gamepassId and not MarketplaceService:UserOwnsGamePassAsync(player.UserId, gamepassId.Value) then
        print("âŒ Don't own gamepass for:", gunName)
        return false
    end
    
    -- Check money
    if player:FindFirstChild("stored") and player.stored:FindFirstChild("Money") then
        if player.stored.Money.Value < price.Value then
            local shortAmount = price.Value - player.stored.Money.Value
            print("âŒ Need $" .. shortAmount .. " more for " .. gunName)
            return false
        end
    end
    
    local oldCFrame = player.Character and player.Character.HumanoidRootPart and player.Character.HumanoidRootPart.CFrame
    
    if not oldCFrame then
        print("âŒ Character not ready")
        return false
    end
    
    -- Teleport to gun
    local part = prompt.Parent
    local teleportCFrame
    if part:IsA("BasePart") then
        teleportCFrame = part.CFrame
    elseif part:IsA("Model") and part.PrimaryPart then
        teleportCFrame = part.PrimaryPart.CFrame
    else
        teleportCFrame = part:GetPivot()
    end
    
    Teleport(teleportCFrame)
    task.wait(0.4)
    
    -- Purchase gun
    local itemReceived = false
    local connection
    
    connection = player.Backpack.ChildAdded:Connect(function(child)
        if child.Name == gunName then
            itemReceived = true
            if connection then
                connection:Disconnect()
            end
        end
    end)
    
    -- Timeout after 1.5 seconds
    task.delay(1.5, function()
        if connection then
            connection:Disconnect()
        end
        itemReceived = true
    end)
    
    -- Fire prompt until item received
    while not itemReceived do
        fireproximityprompt(prompt)
        task.wait(0.1)
    end
    
    task.wait(0.4)
    
    -- Return to original position
    Teleport(oldCFrame)
    
    print("âœ… Purchased:", gunName)
    return true
end

