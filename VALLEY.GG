        buttonCorner.Parent = buttonFrame
        
        local buttonLabel = Instance.new("TextLabel")
        buttonLabel.Name = gunName .. "ButtonLabel"
        buttonLabel.Text = "ðŸ”« " .. gunName
        buttonLabel.Font = Enum.Font.GothamMedium
        buttonLabel.TextSize = buttonTextSize * 0.9
        buttonLabel.TextColor3 = Color3.fromRGB(220, 180, 120)
        buttonLabel.BackgroundTransparency = 1
        buttonLabel.Size = UDim2.new(1, -10, 1, 0)
        buttonLabel.Position = UDim2.new(0, 10, 0, 0)
        buttonLabel.Parent = buttonFrame
        
        local button = Instance.new("TextButton")
        button.Name = gunName .. "Button"
        button.Text = ""
        button.BackgroundTransparency = 1
        button.Size = UDim2.new(1, 0, 1, 0)
        button.Parent = buttonFrame
        
        -- Store reference
        gunButtons[gunName] = {
            frame = buttonFrame,
            label = buttonLabel,
            button = button
        }
        
        button.MouseButton1Click:Connect(function()
            -- Deselect all other buttons
            for name, btnData in pairs(gunButtons) do
                if name ~= gunName then
                    btnData.frame.BackgroundColor3 = Color3.fromRGB(40, 30, 20)
                    btnData.frame.BorderColor3 = Color3.fromRGB(100, 60, 30)
                    btnData.label.Text = "ðŸ”« " .. name
                end
            end
            
            -- Select this button
            buttonFrame.BackgroundColor3 = Color3.fromRGB(60, 40, 20)
            buttonFrame.BorderColor3 = Color3.fromRGB(255, 140, 0)
            buttonLabel.Text = "âœ… " .. gunName
            
            selectedGun = gunName
            SelectedLabel.Text = "Selected: " .. gunName
        end)
    end
    
    -- Function to refresh gun list
    local function refreshGunList()
        -- Clear existing buttons
        for name, btnData in pairs(gunButtons) do
            btnData.frame:Destroy()
        end
        gunButtons = {}
        
        -- Get new gun list
        local guns = getGunList()
        
        -- Update container size
        GunListContainer.CanvasSize = UDim2.new(0, 0, 0, #guns * 40 * deviceInfo.buttonScale)
        
        -- Create buttons for each gun
        for i, gunName in ipairs(guns) do
            createGunButton(gunName, i)
        end
        
        if #guns > 0 then
            SelectedLabel.Text = "Found " .. #guns .. " guns. Select one."
        else
            SelectedLabel.Text = "No guns found in GUNS folder."
        end
        
        selectedGun = nil
    end
    
