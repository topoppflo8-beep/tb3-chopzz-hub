    -- Toggle button function
    local function toggleUI()
        uiVisible = not uiVisible
        MainFrame.Visible = uiVisible
       
        -- Change toggle button text/color when UI is visible
        if uiVisible then
            ToggleButton.TextColor3 = Color3.fromRGB(255, 100, 100)
