    -- Quick Buy Variables
    local selectedGun = nil
    local gunButtons = {}
    
    -- Function to create gun button for Quick Buy tab
    local function createGunButton(gunName, index)
        local buttonFrame = Instance.new("Frame")
        buttonFrame.Name = gunName .. "ButtonFrame"
        buttonFrame.BackgroundColor3 = Color3.fromRGB(40, 30, 20)
        buttonFrame.BorderColor3 = Color3.fromRGB(100, 60, 30)
